
<h2 class="authHeader">Sign in</h2>

<div class="authsContain">
<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
  <div class="form_margin"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div class="form_margin"><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-me-checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="sign_in"><%= f.submit "Sign in" %></div>
<% end %>

  <div class="sign-up">
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= render "devise/shared/links" %>
  </div>
</div>
