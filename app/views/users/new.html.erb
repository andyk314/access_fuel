<body class="users-new">
<%= render 'events/nav_bar' %>
<h1> Registration </h1>

  <%= form_for @user do |f| %>
  
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
    <% end %>
      </ul>
  <% end %>


<div>
  <div class="form-group">
    <div class="col-sm-12">
      <label class="label-control">
        <%= f.label :email %>
      </label>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="col-sm-12">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.submit "Register", class: "btn btn-default btn-lg btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
