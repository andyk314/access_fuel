<!-- Container for event photo and description -->
<section class="description">
	<div class="container-fluid">
		<div class="row group_photo_row">
			<div class="col-md-12 text-center">
				<img src="<%= @event.group_photo %>" class="group_photo">
			</div>
		</div>
	
		<div class="row">
			<div class="col-md-12 text-center">
			<h1 class="event_name text-center" data-toggle="collapse" data-target="#demo"><%= @event.name %></h1>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<p class="text-center">
					<%= weekday_converter(@event.date).upcase %>, <%= date_converter(@event.date).upcase %> @ <%= time_converter(@event.date) %></p>
				<p class="text-center">Hosted by <%= @event.group %></p>
				<p class="text-center">@<%= @event.venue %> <%= @event.city %></p>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12 event_description">
				<%= truncate(strip_tags(@event.description), length: 500) %>
			</div>
		</div>
</section>

<!-- Bottom Fixed Navigation -->
<nav class="navbar navbar-default navbar-fixed-bottom" id="bottom_nav" role="navigation">
  <div class="container bottom_container">
		 <div class="row">
			<div class="col-xs-4">
				<i class="glyphicon glyphicon-star index" onclick = "checkCookie(<%= @event.id %> )"></i>
			</div>
			<div class="col-xs-4">
				<p><%= link_to "RSVP NOW", @event.url %> </p>
			</div>
			<div class="col-xs-4 text-right">
				<p class="badge badge_show"><%= @event.rsvp %></p>
			</div>
		</div>
  </div>
</nav>
	

