<style>
	input.rsvp {
		border: 1px solid blue;
		border-radius: 5px;
		padding: 5px 10px;
		background-color: white;
		border: white;
		text-shadow: white;
		box-shadow: none;
	}

	.rsvp:hover {
		background: color: black;
		color: white;
	}

	.fa-users, .rsvp_badge, .fa-calendar, .fa-heart {
		color: black;
	}

	button.fa-calendar{
		box-shadow: none;
		border: white;
		background-color: none;
		text-shadow: white;
	}

	.ui-page-theme-a .ui-btn{
		background-color:white;
		.ui-btn:hover {
			background-color:black;
