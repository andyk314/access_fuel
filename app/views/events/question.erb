<%= current_user.id %>
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.object.name %>

  <%= f.simple_fields_for :questions do |q| %>
    <%= q.object.poll%>
    <%= question_id = q.object.id%>
    <%= question_id %>
    
    
    <%= q.simple_fields_for :answers, q.object.answers.build do |a|%>
      <%= a.text_field :response %>
      <%= a.hidden_field :event_id, :value => params[:id]  %>
      <%= a.number_field :question_id, :name => question_id %>
      <%= a.hidden_field :user_id, :value => @current_user.id %>
    <% end %>
  <% end %>
  <%= f.button :submit%>
<% end %>