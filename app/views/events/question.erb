<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.object.name %>

  <%= f.simple_fields_for :questions, @event.questions do |q| %>
    <%= q.object.poll%>
    <%= q.simple_fields_for :answers, q.object.answers.build do |a|%>
      <%= a.text_field :response %>
    <% end %>
  <% end %>
  <%= f.button :submit%>
<% end %>