<nav>
	<div class ="container-fluid">
		<div class="row">
			<div id="logo" class="col-md-3 col-sm-3 col-xs-4"><a href="../welcome.html"><span class = "glyphicon glyphicon-picture"</span></a></div>
			<div id="header" class="col-md-6 col-sm-6 col-xs-4"><%= link_to 'Events', events_path %></div>
			<div id="favorite_link" class="col-md-3 col-sm-3 col-xs-4"><%= link_to 'Favorite',  favorite_path %></div>
		</div>
	</div>
</nav>

<div class="container-fluid content">
	<% @events.each do |event| %>
	<div class="row row_events">
		<div class="column1 col-date col-sm-1 col-xs-2 col-md-1">
			<div class="col-md-12"><%= month_converter(event.date).upcase %></div>
			<div class="date col-md-12 side"><%= day_converter(event.date) %></div>
			<div class="col-md-12"><%= weekday_converter(event.date).upcase %></div>
		</div>

		<div class="col-sm-10 col-xs-8 col-md-10">
			<ul>
				<li class="event_header"><%= link_to event.name, event_path(event) %></li>
				<li class="event_date"><%= date_converter(event.date) %></li>
				<li><%= event.venue %> <%= event.city %></li>
			</ul>
		</div>

		<div class="col-xs- col-sm-1 col-md-1">
			<i class="glyphicon glyphicon-star favorite"></i>
		</div>
	</div>
	<% end %>
</div>









