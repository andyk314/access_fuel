<%= render 'events/nav_bar' %>

<!-- Events Listing Container-->
<div class="container-fluid content">
	<div class="row row_filter">
		<div class="column col-xs-12 text-center" style="padding:0px">
			<div class="btn-group">
			  <button type="button" id="fav" class="btn btn-default" onclick="fav()">Favorites</button>
				
				<button type="button" id="nearest" class="btn btn-default" onclick="nearest()">Nearest</button>

			  <button class="btn dropdown-toggle sr-only" type="button" id="dropdownMenu1" data-toggle="dropdown">
			    Dates
			    <span class="caret"></span>
			  </button>

			  <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">
			  	<li role="presentation" class="dropdown-header">Filter by...</li>
			  	<li role="presentation" class="divider"></li>
					<button type="button" id="today" class="btn btn-default" onclick="today()">Today</button>

					<button type="button" id="tomorrow" class="btn btn-default" onclick="tomorrow()">Tomorrow</button>

					<button type="button" id="weekend" class="btn btn-default" onclick="weekend()">Weekend</button>
			  </ul>








<!-- 				<button class="btn dropdown-toggle sr-only" type="button" id="dropdownDates" date-toggle="dropdown">
					Dates<span class="caret"></span></button> -->

<!-- 			  <button type="button" id="tomorrow" class="btn btn-default" onclick="tomorrow()">Tomorrow</button>
			  <button type="button" id="weekend" class="btn btn-default" onclick="weekend()">Weekend</button> -->

			</div>
		</div>
	</div>
</div>
<div id="filtered_events">
	<%= render "events/events" %>
</div>
<!-- End of Event Listing container -->

<script>
	function today() {
		$.get( "events", { time_period: "today" } );
	}

	function tomorrow() {
		$.get( "events", { time_period: "tomorrow" } );
	}

	function weekend() {
		$.get( "events", { time_period: "weekend" } );
	}

	function fav() {
		$.get( "events", { time_period: "fav" } );
	}

	function nearest() {
		$.get( "events", { time_period: "nearest" } );
	}

	function today() {
		$.get( "events", { time_period: "today" } );
	}
</script>








