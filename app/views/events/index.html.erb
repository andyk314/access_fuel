	<div class ="container-fluid">
		<div class="row header_row">
			<div id="icon" class="col-md-2 col-sm-2 col-xs-3"><a href="../welcome.html"><img id = "icon_image"/></a></div>
			<div id="header" class="col-md-6 col-sm-8 col-xs-4">Events</div>
			<div id="favorite_link_events" class="col-md-4 col-sm-2 col-xs-5"><%= link_to 'Favorites',  favorite_path, :class => 'fav_events' %>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12 text-center">
				<p id="survey"><%= link_to 'Help us improve AF... we want your feedback!', 'https://accessfuel.wufoo.com/forms/prototype-feedback-from-awesome-fuelers/', class: "survey_link", target: "_blank" %>
				</p>
			</div>
		</div>
	</div>
</nav>

<div class="container-fluid content">
	<% @events.each do |event| %>
	<div class="row row_events">

		<div class="column1 col-date col-md-1 col-sm-1 col-xs-1">
			<div class="col-md-12"><%= month_converter(event.date).upcase %></div>
			<div class="date col-md-12 side"><%= day_converter(event.date) %></div>
			<div class="col-md-12"><%= weekday_converter(event.date).upcase %></div>
		</div>

		<div class="col-md-10 col-sm-8 col-xs-8 ">
			<ul>
				<li class="event_header"><%= link_to event.name, event_path(event) %></li>
				<li class="event_date"><%= date_converter(event.date) %></li>
				<li><%= event.venue %> <%= event.city %></li>
			</ul>
		</div>

		<div class="col-md-1 col-sm-1 col-xs-2">
			<i class="glyphicon glyphicon-star index" onclick = "checkCookie(<%= event.id %> )"></i>
		</div>
	</div>

	<div class="row row_data text-center">
		<div class="col-md-12">
			<button id="button_down" type="button" data-toggle="collapse" data-target="#data<%=event.id%>">
			  <i class="glyphicon glyphicon-chevron-down"></i>
			</button>
		</div>
	</div>

	<div class="collapse row row_description" id="data<%=event.id%>">
		<div class="col-md-12">
			<%= truncate(strip_tags(event.description), length: 200, separator: ' ') { link_to "More", event_path(event) }%>
		</div>
	</div>

	<% end %>
</div>


